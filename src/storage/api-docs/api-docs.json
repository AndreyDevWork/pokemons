{
    "openapi": "3.0.0",
    "info": {
        "title": "Pokemons Backend",
        "version": "1.0.0"
    },
    "paths": {
        "/api": {},
        "/oauth/token": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Get tokens",
                "operationId": "signIn",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "oneOf": [
                                    {
                                        "properties": {
                                            "grant_type": {
                                                "type": "string",
                                                "example": "password"
                                            },
                                            "client_id": {
                                                "type": "string",
                                                "example": "ZGFfPErDzJONO2j9evX3_2mRdgqN"
                                            },
                                            "client_secret": {
                                                "type": "string",
                                                "example": "KMWZ_L8jgUKNrShC"
                                            },
                                            "username": {
                                                "type": "string",
                                                "example": "Slark"
                                            },
                                            "password": {
                                                "type": "string",
                                                "example": "slarkAAA3"
                                            }
                                        },
                                        "type": "object"
                                    },
                                    {
                                        "properties": {
                                            "grant_type": {
                                                "type": "string",
                                                "example": "refresh_token"
                                            },
                                            "client_id": {
                                                "type": "string",
                                                "example": "ZGFfPErDzJONO2j9evX3_2mRdgqN"
                                            },
                                            "client_secret": {
                                                "type": "string",
                                                "example": "KMWZ_L8jgUKNrShC"
                                            },
                                            "refresh_token": {
                                                "type": "string",
                                                "example": "15f8017665b4094d15432da"
                                            }
                                        },
                                        "type": "object"
                                    }
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "token_type": {
                                            "type": "string",
                                            "example": "Bearer"
                                        },
                                        "expires_in": {
                                            "type": "integer",
                                            "example": "54000"
                                        },
                                        "access_token": {
                                            "type": "string",
                                            "example": "wianRpIjoiZDQwMTQwZGE3MDJlNTYwYzVkYz"
                                        },
                                        "refresh_token": {
                                            "type": "string",
                                            "example": "pIjoiZDQwMTQwZwZGE3MDJlNTYwYzVkYz"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Invalid username or password"
                    },
                    "400": {
                        "description": "Invalid grant type"
                    }
                }
            }
        },
        "/api/auth/register": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Registration",
                "operationId": "signUp",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/AuthRegisterRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "The user has successfully registered",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/UserResource"
                                }
                            }
                        }
                    },
                    "409": {
                        "description": "The user with the provided username is already registered"
                    },
                    "422": {
                        "description": "Validation error"
                    }
                }
            }
        },
        "/api/profile": {
            "get": {
                "tags": [
                    "Profile"
                ],
                "summary": "Get profiles",
                "operationId": "getProfiles",
                "responses": {
                    "200": {
                        "description": "Profile",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/ProfileResource"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            },
            "post": {
                "tags": [
                    "Profile"
                ],
                "summary": "Create profile of user",
                "operationId": "createProfile",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/ProfileStoreRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "The profile has successfully created profile",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ProfileResource"
                                }
                            }
                        }
                    },
                    "409": {
                        "description": "Profile already exists for this user."
                    },
                    "422": {
                        "description": "Validation error"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            },
            "patch": {
                "tags": [
                    "Profile"
                ],
                "summary": "Update auth profile of user",
                "operationId": "updateProfile",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/ProfileUpdateRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "The profile has successfully updated profile",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ProfileResource"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation error"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/profile/{id}": {
            "get": {
                "tags": [
                    "Profile"
                ],
                "summary": "Get profile by USER ID",
                "operationId": "getProfile",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of the user",
                        "schema": {
                            "type": "integer",
                            "format": "int64"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Profile",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ProfileResource"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Profile not found"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        }
    },
    "components": {
        "schemas": {
            "AuthRegisterRequest": {
                "required": [
                    "username",
                    "password"
                ],
                "properties": {
                    "username": {
                        "type": "string",
                        "example": "Slark"
                    },
                    "email": {
                        "type": "string",
                        "example": "slark@gmail.com",
                        "nullable": true
                    },
                    "password": {
                        "type": "string",
                        "example": "slarkAAA3"
                    }
                },
                "type": "object"
            },
            "ProfileStoreRequest": {
                "required": [
                    "date_of_birth",
                    "firstname",
                    "lastname",
                    "role_id"
                ],
                "properties": {
                    "date_of_birth": {
                        "type": "string",
                        "example": "2001-02-14"
                    },
                    "firstname": {
                        "type": "string",
                        "example": "Slark"
                    },
                    "lastname": {
                        "type": "string",
                        "example": "Puchina"
                    },
                    "role_id": {
                        "type": "integer",
                        "example": "1"
                    }
                },
                "type": "object"
            },
            "ProfileUpdateRequest": {
                "properties": {
                    "date_of_birth": {
                        "type": "string",
                        "example": "2001-02-14"
                    },
                    "firstname": {
                        "type": "string",
                        "example": "Slark"
                    },
                    "lastname": {
                        "type": "string",
                        "example": "Puchina"
                    }
                },
                "type": "object"
            },
            "ProfileResource": {
                "properties": {
                    "date_of_birth": {
                        "type": "string",
                        "example": "2001-02-14"
                    },
                    "firstname": {
                        "type": "string",
                        "example": "Slark"
                    },
                    "lastname": {
                        "type": "string",
                        "example": "Puchina"
                    },
                    "role": {
                        "type": "string",
                        "example": "student"
                    },
                    "user": {
                        "$ref": "#/components/schemas/UserResource"
                    }
                },
                "type": "object"
            },
            "UserResource": {
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": "7"
                    },
                    "username": {
                        "type": "string",
                        "example": "Slark"
                    },
                    "email": {
                        "type": "string",
                        "example": "slark@gmail.com",
                        "nullable": true
                    }
                },
                "type": "object"
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer"
            }
        }
    }
}